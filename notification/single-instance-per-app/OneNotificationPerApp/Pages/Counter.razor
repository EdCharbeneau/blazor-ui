@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<TelerikButton OnClick="@IncrementCount">Click me</TelerikButton>

@code {
    [CascadingParameter]
    protected Notification Notification { get; set; }

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
        Notification.Instance.Show(new NotificationModel()
        {
            Text = "From COUNTER Page, counter: " + currentCount,
            ThemeColor = ThemeConstants.Notification.ThemeColor.Info,
            CloseAfter = 2000,
            Closable = true
        });
    }
}