@*
    This component MUST be a child of TelerikRootComponent or TelerikContainer to work.
*@

<div class="sample-box">
    This is <code>Shared/DialogAwareComponent.razor</code>.

    <TelerikButton OnClick="@OnButtonClick">Show Dialog Directly</TelerikButton>
</div>

@code {
    [CascadingParameter]
    public DialogFactory? Dialogs { get; set; }

    public async Task OnButtonClick()
    {
        if (Dialogs != null)
        {
            await Dialogs.AlertAsync("Telerik DialogFactory");
        }
    }
}
